            </Grid>

        </Grid>-->

        <!-- Show ID Popup-->
        <Grid Grid.Column="0" Grid.ColumnSpan="4" Background="#88000000" Margin="00">

            <Grid.Style>
                <Style>
                    <Setter Property="Label.Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowIDPopUp}" Value="true">
                            <Setter Property="Grid.Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid Name="IDPopUp" Background="Transparent" Width="1250" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">

                <Grid.RowDefinitions>
                    <RowDefinition Height="80"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#41719c" BorderThickness="1" CornerRadius="10" Name="Border">

                    <Grid>
                        <Border Name="mask" Background="white" CornerRadius="10"/>

                        <Grid Background="#5b9bd5" Margin="0,0,0,0">
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=mask}"/>
                            </Grid.OpacityMask>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="55" FontFamily="Ariel" FontWeight="bold" Foreground="White" Content="{x:Static p:Resources.PopUpTitleID}"/>
                            </StackPanel>
                        </Grid>

                    </Grid>
                </Border>

                <Border Grid.Row="1" BorderBrush="#41719c" BorderThickness="1" CornerRadius="10" Margin="0, 5, 0, 0">
                    <Grid>
                        <Border Name="mask2" Background="White" CornerRadius="10"/>

                        <Grid Background="DarkGray" Margin="0,0,0,0">
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=mask2}"/>
                            </Grid.OpacityMask>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="10,50,0,5" >
                                <!--Modif-->

                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" >
                                    <StackPanel.Style>
                                        <Style>
                                            <Setter Property="Label.Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IdManualOption}" Value="1">
                                                    <Setter Property="Grid.Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <Label FontSize="36" FontFamily="Ariel" FontWeight="bold" Content="ID:" HorizontalAlignment="Center"/>
                                    <TextBox FontSize="36" BorderBrush="DarkSlateBlue" BorderThickness="2" Width="800" HorizontalAlignment="Center" Text="{Binding IDValue}"/>
                                </StackPanel>
                                <StackPanel Name="Params" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Image Source="pack://siteoforigin:,,,/Resources/Icons/ok.png" Margin="10,50,0,5" MouseLeftButtonDown="paramsValidation">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonUp">
                                            <i:InvokeCommandAction Command="{Binding IDPopUpOkCommand}" CommandParameter=""/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Image>
                                <Image Source="pack://siteoforigin:,,,/Resources/Icons/cancel.png" Margin="10,50,10,5">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonUp">
                                            <i:InvokeCommandAction Command="{Binding IDPopUpCancelCommand}" CommandParameter=""/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Image>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

        </Grid>

        <!-- Show shut popup-->
        <Grid Grid.Column="0" Grid.ColumnSpan="3" Background="#88000000" Margin="00">

            <Grid.Style>
                <Style>
                    <Setter Property="Label.Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowShutPopUp}" Value="true">
                            <Setter Property="Grid.Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid Background="Transparent" Width="1000" Height="500" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">

                <Grid.RowDefinitions>
                    <RowDefinition Height="80"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#41719c" BorderThickness="1" CornerRadius="10" Name="BorderShut2">
                    <Grid>
                        <Border Name="maskShut" Background="White" CornerRadius="10"/>

                        <Grid Background="#5b9bd5" Margin="0,0,0,0">
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=maskShut}"/>
                            </Grid.OpacityMask>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Ariel" FontWeight="bold" Foreground="White" Content="{x:Static p:Resources.PopUpTitleShut}"/>
                            </StackPanel>
                        </Grid>

                    </Grid>
                </Border>

                <Border Grid.Row="1" BorderBrush="#41719c" BorderThickness="1" CornerRadius="10" Margin="0,5,0,0">
                    <Grid>
                        <Border Name="maskShut2" Background="White" CornerRadius="10"/>

                        <Grid Background="White" Margin="0,0,0,0">
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=maskShut2}"/>
                            </Grid.OpacityMask>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Label FontSize="48" FontFamily="Ariel" FontWeight="bold" Content="{x:Static p:Resources.PopUpTxtShut}" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Image Source="pack://siteoforigin:,,,/Resources/Icons/ok.png" Margin="10,5,0,5">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonUp">
                                            <i:InvokeCommandAction Command="{Binding ShutPopUpOkCommand}" CommandParameter=""/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Image>
                                <Image Source="pack://siteoforigin:,,,/Resources/Icons/cancel.png" Margin="10,5">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonUp">
                                            <i:InvokeCommandAction Command="{Binding ShutPopUpCancelCommand}" CommandParameter=""/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Image>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </Border>

            </Grid>

        </Grid>

        <!-- Show Spider Chart popup -->

        <Grid Grid.Column="1" Background="White" Margin="00">

            <Grid.Style>
                <Style>
                    <Setter Property="Label.Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowSpiderChartPopUp}" Value="true">
                            <Setter Property="Grid.Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!--<Label FontSize="48" FontFamily="Ariel" FontWeight="bold" Content="{x:Static p:Resources.PopUpTxtShut}"/>-->
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15" >

                <Border BorderBrush="Black" Background="White" BorderThickness="1" Margin="0, 0, 0, 0" Name="SpiderChartGrid"/>

                <!--<Grid Name="theGrid">
                    
                </Grid>-->

                <Polyline Stroke="Gray" StrokeThickness="1" Points="{Binding Axes}" Name="spiderChart" ></Polyline>
                <Polyline Stroke="Brown" StrokeThickness="4" Points="{Binding SpiderSelector}" Name="spidersel"></Polyline>
                <Polyline Stroke="LightGreen" StrokeThickness="4" Points="{Binding SpiderTolerance}" Name="spidertol"></Polyline>
                <Polyline Stroke="Blue" StrokeThickness="4" Points="{Binding SpiderGauche}" Name="spiderGauche"></Polyline>
                <Polyline Stroke="Purple" StrokeThickness="4" Points="{Binding SpiderDroite}" Name="spiderDroite"></Polyline>

                <TextBlock Text="1" FontSize="20" Margin="{Binding FirstSpoke}"/>

            </Grid>

        </Grid>


    </Grid>
</UserControl>
